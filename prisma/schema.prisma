generator client {
  provider = "prisma-client-js"
  output   = "../node_modules/.prisma/client"
}

datasource db {
  provider = "postgresql"
}

// NextAuth models
model Account {
  id                String  @id @default(cuid())
  userId            String
  type              String
  provider          String
  providerAccountId String
  refresh_token     String? @db.Text
  access_token      String? @db.Text
  expires_at        Int?
  token_type        String?
  scope             String?
  id_token          String? @db.Text
  session_state     String?

  user User @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@unique([provider, providerAccountId])
}

model Session {
  id           String   @id @default(cuid())
  sessionToken String   @unique
  userId       String
  expires      DateTime
  user         User     @relation(fields: [userId], references: [id], onDelete: Cascade)
}

model VerificationToken {
  identifier String
  token      String   @unique
  expires    DateTime

  @@unique([identifier, token])
}

// User model
model User {
  id            String    @id @default(cuid())
  name          String?
  email         String?   @unique
  emailVerified DateTime?
  image         String?
  password      String?
  
  stripeCustomerId     String?   @unique
  stripeSubscriptionId String?   @unique
  stripePriceId        String?
  stripeCurrentPeriodEnd DateTime?
  
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
  
  accounts      Account[]
  sessions      Session[]
  ownedTeams    Team[]     @relation("TeamOwner")
  teamMembers   TeamMember[]
  apiKeys       ApiKey[]
  auditLogs     AuditLog[]
  secrets       Secret[]
}

// Team for sharing secrets
model Team {
  id          String   @id @default(cuid())
  name        String
  slug        String   @unique
  description String?
  ownerId     String
  
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
  
  owner      User         @relation("TeamOwner", fields: [ownerId], references: [id], onDelete: Cascade)
  members    TeamMember[]
  projects   Project[]
  auditLogs  AuditLog[]
}

model TeamMember {
  id     String   @id @default(cuid())
  role   TeamRole @default(MEMBER)
  
  teamId String
  userId String
  
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
  
  team Team @relation(fields: [teamId], references: [id], onDelete: Cascade)
  user User @relation(fields: [userId], references: [id], onDelete: Cascade)
  
  @@unique([teamId, userId])
}

enum TeamRole {
  OWNER
  ADMIN
  MEMBER
  VIEWER
}

// Projects contain environments and secrets
model Project {
  id          String  @id @default(cuid())
  name        String
  slug        String
  description String?
  teamId      String
  
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
  
  team         Team          @relation(fields: [teamId], references: [id], onDelete: Cascade)
  environments Environment[]
  
  @@unique([teamId, slug])
}

// Environments (dev, staging, production, etc.)
model Environment {
  id        String @id @default(cuid())
  name      String
  slug      String
  projectId String
  
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
  
  project Project  @relation(fields: [projectId], references: [id], onDelete: Cascade)
  secrets Secret[]
  
  @@unique([projectId, slug])
}

// Encrypted secrets
model Secret {
  id             String  @id @default(cuid())
  key            String
  encryptedValue String  @db.Text
  iv             String  // Initialization vector for AES
  description    String?
  version        Int     @default(1)
  
  environmentId String
  userId        String
  
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
  
  environment Environment    @relation(fields: [environmentId], references: [id], onDelete: Cascade)
  user        User           @relation(fields: [userId], references: [id])
  history     SecretHistory[]
  
  @@unique([environmentId, key])
}

// Secret version history
model SecretHistory {
  id             String @id @default(cuid())
  secretId       String
  encryptedValue String @db.Text
  iv             String
  version        Int
  changedBy      String
  
  createdAt DateTime @default(now())
  
  secret Secret @relation(fields: [secretId], references: [id], onDelete: Cascade)
}

// API Keys for programmatic access
model ApiKey {
  id          String    @id @default(cuid())
  name        String
  keyHash     String    @unique
  keyPrefix   String    // First 8 chars for identification
  permissions String[]  // Array of permission strings
  lastUsedAt  DateTime?
  expiresAt   DateTime?
  
  userId String
  
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
  
  user      User       @relation(fields: [userId], references: [id], onDelete: Cascade)
  auditLogs AuditLog[]
}

// Audit logs for compliance
model AuditLog {
  id        String      @id @default(cuid())
  action    AuditAction
  resource  String      // e.g., "secret", "project", "team"
  resourceId String
  details   Json?
  ipAddress String?
  userAgent String?
  
  userId   String?
  teamId   String?
  apiKeyId String?
  
  createdAt DateTime @default(now())
  
  user   User?   @relation(fields: [userId], references: [id], onDelete: SetNull)
  team   Team?   @relation(fields: [teamId], references: [id], onDelete: SetNull)
  apiKey ApiKey? @relation(fields: [apiKeyId], references: [id], onDelete: SetNull)
  
  @@index([userId])
  @@index([teamId])
  @@index([createdAt])
  @@index([action])
}

enum AuditAction {
  SECRET_CREATE
  SECRET_READ
  SECRET_UPDATE
  SECRET_DELETE
  SECRET_EXPORT
  PROJECT_CREATE
  PROJECT_UPDATE
  PROJECT_DELETE
  TEAM_CREATE
  TEAM_UPDATE
  TEAM_DELETE
  MEMBER_ADD
  MEMBER_REMOVE
  MEMBER_UPDATE
  API_KEY_CREATE
  API_KEY_REVOKE
  LOGIN
  LOGOUT
}
